<section class="view contact">
    <div class="block banner">
        <video class="banner-background" loop muted autoplay>
            <source src="/assets/video/main.mp4" type="video/mp4">
        </video>

        <div class="banner-overlay"></div>

        <div class="container">
            <div class="banner-body">
                <h1 class="banner-body-title">
                    Contact
                </h1>

                <p class="banner-body-description">
                    Aenean nec lorem in porttitor donec laoreet nonummy augue.
                </p>
            </div>
        </div>
    </div>

    <div class="block form">
        <div class="form-head">
            <div class="container">
                <div class="form-head-column left col-md-4">
                    <p class="form-head-column-title">
                        Nr. 01
                    </p>
                </div>

                <div class="form-head-column center col-md-4">
                    <p class="form-head-column-title">
                        Any questions or interested in wholesale?
                    </p>
                </div>

                <div class="form-head-column right col-md-4">
                    <p class="form-head-column-title">
                        "The future is yours"
                    </p>
                </div>
            </div>
        </div>

        <div class="form-body">
            <div class="container">
                <div class="form-body-column left col-md-4">
                    <h1 class="form-body-title">
                        Any questions or interested in wholesale?
                    </h1>
                </div>

                <div class="form-body-column col-md-8">
                    <form method="post">
                        <div class="form-body-row row">
                            <div class="form-body-column left col-md-6">
                                <input class="form-body-group-input" type="text" name="first_name" placeholder="First name" autocomplete="off">
                            </div>

                            <div class="form-body-column center col-md-3">
                                <input class="form-body-input" type="text" name="insertion" placeholder="Insertion" autocomplete="off">
                            </div>

                            <div class="form-body-column right col-md-3">
                                <input class="form-body-input" type="text" name="last_name" placeholder="Last name" autocomplete="off">
                            </div>
                        </div>

                        <div class="form-body-row row">
                            <div class="form-body-column left col-md-6">
                                <input class="form-body-input" type="text" name="email" placeholder="Email" autocomplete="off">
                            </div>

                            <div class="form-body-column right col-md-6">
                                <input class="form-body-input" type="text" name="phone_number" placeholder="Phone number" autocomplete="off">
                            </div>
                        </div>

                        <div class="form-body-row row">
                            <div class="form-body-column left col-md-6">
                                <input class="form-body-input" type="text" name="country" placeholder="Country" autocomplete="off">
                            </div>

                            <div class="form-body-column right col-md-6">
                                <input class="form-body-input" type="text" name="subject" placeholder="Subject" autocomplete="off">
                            </div>
                        </div>

                        <div class="form-body-row row">
                            <textarea class="form-body-textarea" name="message" placeholder="Message" rows="5"></textarea>
                        </div>

                        <button class="form-body-button">
                            Send
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="view management product overview">
    <div class="block banner">
        <video class="banner-background" loop muted autoplay>
            <source src="/assets/video/main.mp4" type="video/mp4">
        </video>

        <div class="banner-overlay"></div>

        <div class="container">
            <div class="banner-body">
                <h1 class="banner-body-title">
                    Products
                </h1>

                <p class="banner-body-description">
                    Aenean nec lorem in porttitor donec laoreet nonummy augue.
                </p>
            </div>
        </div>
    </div>

    <div class="block menu">
        <div class="container">
            <ul class="menu-navigation">
                <a href="/management/overview">
                    <li class="menu-navigation-item">
                        Overview
                    </li>
                </a>

                <a href="/management/user/overview">
                    <li class="menu-navigation-item">
                        Users
                    </li>
                </a>

                <a href="/management/order/overview">
                    <li class="menu-navigation-item">
                        Orders
                    </li>
                </a>

                <a href="/management/project/overview">
                    <li class="menu-navigation-item">
                        Projects
                    </li>
                </a>

                <a href="/management/certificate/overview">
                    <li class="menu-navigation-item">
                        Certificates
                    </li>
                </a>
            </ul>

            <ul class="menu-tools">
                <a href="/management/category/edit/<%= category._id %>">
                    <li class="menu-tools-item">
                        Edit
                    </li>
                </a>

                <a href="/management/category/delete/<%= category._id %>">
                    <li class="menu-tools-item">
                        Delete
                    </li>
                </a>

                <a href="/management/product/create/<%= category._id %>">
                    <li class="menu-tools-item">
                        Create
                    </li>
                </a>

                <a href="/user/profile">
                    <li class="menu-tools-item">
                        Logout
                    </li>
                </a>
            </ul>
        </div>
    </div>

    <div class="block breadcrumb">
        <div class="container">
            <ul class="breadcrumb-navigation">
                <a href="/management/project/overview">
                    <li class="breadcrumb-navigation-item">
                        Projects
                    </li>
                </a>

                <a href="/management/category/overview/<%= category.project._id %>">
                    <li class="breadcrumb-navigation-item">
                        <%= category.project.name %>
                    </li>
                </a>

                <a href="/">
                    <li class="breadcrumb-navigation-item">
                        <%= category.name %>
                    </li>
                </a>
            </ul>
        </div>
    </div>

    <div class="block data">
        <div class="container">
            <table class="data-table">
                <thead class="data-table-head">
                    <th class="data-table-head-column">
                        <p class="data-table-head-column-title">
                            #
                        </p>
                    </th>

                    <th class="data-table-head-column">
                        <p class="data-table-head-column-title">
                            Name
                        </p>
                    </th>

                    <th class="data-table-head-column">
                        <p class="data-table-head-column-title">
                            Image
                        </p>
                    </th>

                    <th class="data-table-head-column">
                        <p class="data-table-head-column-title">
                            Description
                        </p>
                    </th>

                    <th class="data-table-head-column">
                        <p class="data-table-head-column-title">
                            Price
                        </p>
                    </th>

                    <th class="data-table-head-column">
                        <p class="data-table-head-column-title">
                            Last updated on
                        </p>
                    </th>

                    <th class="data-table-head-column">
                        <p class="data-table-head-column-title">
                            Created on
                        </p>
                    </th>
                </thead>

                <tbody class="data-table-body">
                    <%
                        let nr = 1;
                        products.forEach((product) => {
                    %>
                        <tr class="data-table-body-row" onclick="goto('/management/product/view/<%= product._id %>')">
                            <td class="data-table-body-column">
                                Nr. 0<%= nr %>
                            </td>

                            <td class="data-table-body-column">
                                <%= product.name %>
                            </td>

                            <td class="data-table-body-column">
                                <img class="data-table-body-column-image" src="/<%= product.images[0] %>">
                            </td>

                            <td class="data-table-body-column">
                                <%= product.description %>
                            </td>

                            <td class="data-table-body-column">
                                <%= product.price %>
                            </td>

                            <td class="data-table-body-column">
                                <%= product.updated.toDateString() %>
                            </td>

                            <td class="data-table-body-column">
                                <%= product.created.toDateString() %>
                            </td>
                        </tr>
                    <%
                            nr++;
                        });
                    %>
                </tbody>
            </table>
        </div>
    </div>
</section>
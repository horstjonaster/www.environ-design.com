<section class="view management product delete">
    <div class="block banner">
        <video class="banner-background" loop muted autoplay>
            <source src="/assets/video/main.mp4" type="video/mp4">
        </video>

        <div class="banner-overlay"></div>

        <div class="container">
            <div class="banner-body">
                <h1 class="banner-body-title">
                    Products
                </h1>

                <p class="banner-body-description">
                    Aenean nec lorem in porttitor donec laoreet nonummy augue.
                </p>
            </div>
        </div>
    </div>

    <div class="block menu">
        <div class="container">
            <ul class="menu-navigation">
                <a href="/management/overview">
                    <li class="menu-navigation-item">
                        Overview
                    </li>
                </a>

                <a href="/management/user/overview">
                    <li class="menu-navigation-item">
                        Users
                    </li>
                </a>

                <a href="/management/order/overview">
                    <li class="menu-navigation-item">
                        Orders
                    </li>
                </a>

                <a href="/management/project/overview">
                    <li class="menu-navigation-item">
                        Projects
                    </li>
                </a>

                <a href="/management/certificate/overview">
                    <li class="menu-navigation-item">
                        Certificates
                    </li>
                </a>
            </ul>

            <ul class="menu-tools">
                <a href="/user/profile">
                    <li class="menu-tools-item">
                        Logout
                    </li>
                </a>
            </ul>
        </div>
    </div>

    <div class="block breadcrumb">
        <div class="container">
            <ul class="breadcrumb-navigation">
                <a href="/management/project/overview">
                    <li class="breadcrumb-navigation-item">
                        Projects
                    </li>
                </a>

                <a href="/management/category/overview/<%= product.project._id %>">
                    <li class="breadcrumb-navigation-item">
                        <%= product.project.name %>
                    </li>
                </a>

                <a href="/management/product/overview/<%= product.category._id %>">
                    <li class="breadcrumb-navigation-item">
                        <%= product.category.name %>
                    </li>
                </a>

                <a href="/management/product/view/<%= product._id %>">
                    <li class="breadcrumb-navigation-item">
                        <%= product.name %>
                    </li>
                </a>

                <a href="/">
                    <li class="breadcrumb-navigation-item">
                        Edit
                    </li>
                </a>
            </ul>
        </div>
    </div>

    <div class="block form">
        <div class="form-head">
            <div class="container">
                <div class="form-head-column left col-md-4">
                    <p class="form-head-column-title">
                        Nr. 01
                    </p>
                </div>

                <div class="form-head-column center col-md-4">
                    <p class="form-head-column-title">
                        Are you sure to delete product <%= product.name %>?
                    </p>
                </div>

                <div class="form-head-column right col-md-4">
                    <p class="form-head-column-title">
                        "The future is yours"
                    </p>
                </div>
            </div>
        </div>

        <div class="form-body">
            <div class="container">
                <div class="form-body-column left col-md-4">
                    <h1 class="form-body-title">
                        Are you sure to delete product <%= product.name %>?
                    </h1>
                </div>

                <div class="form-body-column col-md-8">
                    <form method="post">
                        <button class="form-body-button">
                            Delete
                        </button>

                        <a href="/management/product/view/<%= product._id %>">
                            <button class="form-body-button" type="button">
                                Back
                            </button>
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>